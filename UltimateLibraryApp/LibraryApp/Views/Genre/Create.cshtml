@model LibraryApp.Models.Genre
@{
	ViewData["Title"] = "Create";
}
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()
	;
	<div class="d-flex justify-content-center create-genre">
		<div class="">
			<div class="form-horizontal">
				<h2 class="pb-lg-5 text-center">Create New Genre</h2>
				<div class="form-group">
					@Html.LabelFor(m=>m.Name, htmlAttributes:new {@class= "control-label col-md-2 p-1", style="font-size: 18px;" })
					<div class="col-md-10">
						@Html.EditorFor(m=>m.Name, new { htmlAttributes = new { @class="form-control p-2", style="width: 300px;", placeholder="Enter genre name" }})
						@Html.ValidationMessageFor(m=>m.Name,"", new {@class = "text-danger"})
					</div>

				</div>
			</div>
			<div class="pt-2 d-flex justify-content-center gap-3">
				<input type="submit" class="btn btn-sm btn-success" />
				<a type="button" class="btn btn-primary btn-sm" href="@Url.Action("Index")">
					<span class="glyphicon glyphicon-list"></span>
					<span>Go Back</span>
				</a>
			</div>
		</div>
	</div>

}

